<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.PokemonSettings">

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="217dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.072">

        <!-- Discrete slider -->
        <com.google.android.material.slider.Slider
            android:id="@+id/slider_poke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#055EB5"
            android:contentDescription="@string/slider_description"
            android:stepSize="10.0"
            android:valueFrom="0.0"
            android:valueTo="100.0"
            app:thumbColor="#e8ce0f"
            app:tickColor="#1976D2"
            app:trackColor="#E8CE0F"
            app:trackHeight="10dp" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_weight=".15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1976D2"
            android:textColor="#e8ce0f"
            android:visibility="gone"
            android:text="@string/submit" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>