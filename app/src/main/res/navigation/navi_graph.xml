<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navi_graph"
    app:startDestination="@id/pokeCardFragment">

    <fragment
        android:id="@+id/pokeCardFragment"
        android:name="com.phatherjay.pokedex.view.PokeCardFragment"
        android:label="fragment_poke_mon"
        tools:layout="@layout/fragment_poke_mon" >
        <action
            android:id="@+id/action_pokeCardFragment_to_pokemonSettings"
            app:destination="@id/pokemonSettings" />
        <action
            android:id="@+id/action_pokeCardFragment_to_pokeFavFragment"
            app:destination="@id/pokeFavFragment" />
    </fragment>
    <fragment
        android:id="@+id/pokemonSettings"
        android:name="com.phatherjay.pokedex.view.PokemonSettings"
        android:label="fragment_poke_mon_settings"
        tools:layout="@layout/fragment_poke_mon_settings" />
    <fragment
        android:id="@+id/pokeFavFragment"
        android:name="com.phatherjay.pokedex.view.PokeFavFragment"
        android:label="fragment_poke_favs"
        tools:layout="@layout/fragment_poke_favs" />
</navigation>